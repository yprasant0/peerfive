<h1>Users</h1>

<%= link_to "Create New User", new_user_path, :class => 'btn btn-primary' %>
<br>
<br>
<table>
  <tr>
    <th> # </th>    
    <th>  Name </th>             
    <th> P5_balance   </th>
    <th>Reward_balance </th>
    <th> Login</th>

  </tr>
 <% @users.each_with_index do |user, index| %>
    <tr>
      <td><%= index + 1%></td> 
      <td><%= user.name%></td>       
      <td><%=user&.P5["balance"]%></td>   
      <td><%=user&.reward["balance"] %></td> 
      <td><%=link_to "edit", edit_user_path(user.id), :class => 'btn btn-primary' %></td> 
    </tr>
 <% end %>
 </table>
